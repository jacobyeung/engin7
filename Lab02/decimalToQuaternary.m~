function quaternary = decimalToQuaternary(decimal)
sum = [0, 0, 0, 0, 0, 0, 0, 0];
power = 0;
count = 8;
solution = recurse(decimal);
    function answer = recurse(dec)    
    while dec >= 0
        remainder = mod(dec, 4);
        sum(8) = remainder;
        dec = (dec - remainder) / 4;
        power = power + 1;
        count = count - 1;
    end
    answer = sum;
    end
resum = recurse(sum);
if resum == sum
    quaternary = resum;
else
    quaternary = decimalToQuaternary(sum);
end

end